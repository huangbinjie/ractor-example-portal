{
  "compilerOptions": {
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "paths": {
      "~/*": [
        "*"
      ],
      "@environment": [
        "environment/index.ts"
      ],
      "@components/*": [
        "app/components/*"
      ],
      "@utils/*": [
        "app/utils/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@dashboard/*": [
        "app/pages/dashboard/*"
      ],
      "@app/*": [
        "app/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "commitlint.config.js",
    "mock"
  ]
}